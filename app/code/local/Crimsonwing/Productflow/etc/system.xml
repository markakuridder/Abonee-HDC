<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <crimsonwing>
            <label>Crimsonwing</label>
            <sort_order>110</sort_order>
        </crimsonwing>
    </tabs>
    <sections>
        <productflow translate="label" module="productflow">
            <label>Product Flow</label>
            <tab>crimsonwing</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <max_step translate="label">
                            <label>Maximum Step</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </max_step>
                        <steps translate="label comment">
                            <label>Steps Properties</label>
                            <frontend_model>productflow/adminhtml_system_config_form_field_stepProperties</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Clear Cart On Visiting PDP: 1 = Clear Step's Product(s) From Cart, 2 = Clear All Products From Cart</comment>
                        </steps>
                        <skip_cart translate="label">
                            <label>Skip Shopping Cart</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </skip_cart>
                        <attribute_match translate="label">
                            <label>Match By Attributes</label>
                            <frontend_type>text</frontend_type>
                            <comment>If there are multiple products for the same step, match it by these attributes (comma separated attribute codes, matching using logical 'AND').</comment>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </attribute_match>
                    </fields>
                </general>
            </groups>
        </productflow>
    </sections>
</config>
